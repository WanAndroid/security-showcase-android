<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="0dip" />
			<gradient
				android:startColor="@color/theme_text_divider"
				android:centerColor="@color/theme_text_divider"
				android:endColor="@color/theme_text_divider"
			/>
		</shape>
	</item>


	<item
		android:id="@android:id/progress"
	>
		<clip>
			<shape>
				<corners
					android:radius="0dip" />
				<gradient
					android:startColor="@color/theme_accent"
					android:endColor="@color/theme_accent" />
			</shape>
		</clip>
	</item>

</layer-list>