<resources>

	<style name="Theme.SecurityShow" parent="Theme.Base.SecurityShow">

	</style>


	<!-- Base application theme. -->
	<style name="Theme.Base.SecurityShow" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/theme_primary</item>
		<item name="colorPrimaryDark">@color/theme_primary_dark</item>
		<item name="colorAccent">@color/theme_accent</item>
		<item name="android:textColorPrimary">@color/theme_text_primary</item>
		<item name="android:textColorSecondary">@color/theme_text_secondary</item>
		<item name="android:windowBackground">@color/theme_background</item>
	</style>

	<style name="Theme.SecurityShow.PrimaryAccent" parent="Theme.Base.SecurityShow">
		<item name="colorAccent">@color/theme_primary</item>
	</style>

	<style name="Theme.SecurityShow.Login" parent="Theme.Base.SecurityShow">
		<item name="colorAccent">@color/white</item>
		<item name="android:textColorHint">@color/white</item>
		<item name="colorControlNormal">@color/white</item>
		<item name="colorControlActivated">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
	</style>

	<style name="Theme.SecurityShow.LightCard">
		<item name="colorControlHighlight">@color/theme_window_background</item>
	</style>

	<style name="ThemeOverlay.AppCompat.SecurityShow" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@color/theme_accent</item>
	</style>

	<style name="Theme.SecurityShow.Design.TabLayout" parent="Widget.Design.TabLayout">
		<item name="tabTextAppearance">@style/TabTextAppearance</item>
	</style>

	<style name="ThemeOverlay.AppCompat.SecurityShow.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
		<!-- Used to for the title of the Toolbar -->
		<item name="android:textColorPrimary">@color/white</item>
		<!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
		<item name="android:textColorPrimaryInverse">@color/white</item>
		<!-- Used to color the text of the action menu icons -->
		<item name="android:textColorSecondary">@color/white</item>
		<!-- Used to color the overflow menu icon -->
		<item name="actionMenuTextColor">@color/white</item>
		<!-- Color of the Toolbar -->
		<item name="android:background">@color/theme_primary</item>
	</style>

	<style name="Theme.SecurityShow.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/theme_accent</item>
		<item name="android:textColorPrimary">@color/theme_text_primary</item>
	</style>

</resources>
